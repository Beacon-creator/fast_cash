<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local1="clr-namespace:Fast_Cash.Model"
             NavigationPage.HasNavigationBar="False"
             x:Class="Fast_Cash.Pages.ForgotPasswordVerificationPage">
    <ContentPage.Content>
        <StackLayout Padding="20,0" Margin="0,20">
            <StackLayout Orientation="Horizontal">
                <ImageButton x:Name="backbut"  Clicked="backbut_Clicked" WidthRequest="20" HeightRequest="20" Margin="0,2,10,0" Style="{DynamicResource Backbutton}"/>
                <Label Text="Forgot Password" 
   Style="{DynamicResource headlabel3}"/>
            </StackLayout>

            <StackLayout Spacing="20" VerticalOptions="CenterAndExpand">
                <Image Source="img5.png" Aspect="AspectFit"/>
                <StackLayout >
                    <Label Text="Please enter your verification code."  Style="{DynamicResource headlabel}"/>
                    <Label Text="We have sent a verification code to your registered email" Style="{DynamicResource headlabel4}"/>
                </StackLayout>

                <StackLayout Spacing="10" Orientation="Horizontal"  HorizontalOptions="CenterAndExpand">
                    <Frame Style="{DynamicResource verifyF}">
                        <local1:LineEntry x:Name="CodeEntry1" Style="{DynamicResource verifyE}"  />
                    </Frame>
                    <Frame Style="{DynamicResource verifyF}">
                        <local1:LineEntry x:Name="CodeEntry2" Style="{DynamicResource verifyE}"  />
                    </Frame>
                    <Frame Style="{DynamicResource verifyF}">
                        <local1:LineEntry x:Name="CodeEntry3" Style="{DynamicResource verifyE}"  />
                    </Frame>
                    <Frame Style="{DynamicResource verifyF}">
                        <local1:LineEntry x:Name="CodeEntry4" Style="{DynamicResource verifyE}"  />
                    </Frame>
                </StackLayout>

                <Label Text="Resend" FontSize="Medium"
                       TextColor="{DynamicResource TertiaryTextColor2}" 
                        HorizontalOptions="Center" Margin="0,0,0,0" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Resend"/>
                    </Label.GestureRecognizers>
                </Label>

                <Button x:Name="FotgotbutNext" FontSize="Medium" Text="Next" Clicked="ForgotbutNext" 
                        Style="{DynamicResource entranceButtons}" Margin="20,50,20,0"/>

            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>