<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:Cashnal.Custom_Render"
             x:Class="Cashnal.Pages.TabbedPages.FacescanPage"
                  BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="FacescanPage">
    <VerticalStackLayout Padding="20,20">
        
        <local:NavTop Header="QR code"  Home="Home" Route="//HomePage"/>
        <Label Style="{DynamicResource headlabel2}" Text="Scan your face for verification"/>
        <local:CardScanner x:Name="CardScannerComponent" Margin="0,20"/>
    </VerticalStackLayout>
</ContentPage>