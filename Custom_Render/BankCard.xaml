git<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fast_Cash.Custom_Render.BankCard">
    <ContentView.Content>
        <Frame x:Name="CardFrame" BackgroundColor="Transparent" Padding="0" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource SecundaryTextColor}">
            <Image x:Name="backgroundImage" WidthRequest="45" HeightRequest="45" Source="{Binding BackgroundImageSource}"/>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomePageVM}}, Path=NavigationCommand}"
                           CommandParameter="{Binding .}" />
            </Frame.GestureRecognizers>
        </Frame>
    </ContentView.Content>
</ContentView>
