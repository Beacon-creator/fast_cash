<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Fast_Cash.Custom_Render.CardScanner">
    <VerticalStackLayout>
        <Frame CornerRadius="10"
            BackgroundColor="{DynamicResource ProTextColor}" WidthRequest="250" HeightRequest="200" HasShadow="True">
            <ImageButton WidthRequest="80" HeightRequest="80" Source="qr_code.svg"/>
        </Frame>
    </VerticalStackLayout>
</ContentView>
