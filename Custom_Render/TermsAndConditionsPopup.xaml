<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fast_Cash.Custom_Render.TermsAndConditionsPopup">
    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="20" BackgroundColor="White" WidthRequest="300" HeightRequest="400">
        <ScrollView>
            <StackLayout>
                <Label Text="Terms and Conditions" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Here are the terms and conditions..." FontSize="Small" Margin="0,10,0,0"/>
                <!-- Add more content as needed -->
            </StackLayout>
        </ScrollView>
        <Button Text="Close" Command="{Binding HidePopupCommand}" VerticalOptions="End" HorizontalOptions="Center"/>
    </Grid>
</ContentView>
