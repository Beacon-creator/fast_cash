<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:local="clr-namespace:Cashnal.Model"
             x:Class="Cashnal.Custom_Render.SearchFrame">
    <Frame CornerRadius="10" HasShadow="True" BorderColor="{DynamicResource SecundaryTextColor}" Padding="20,0">
        <HorizontalStackLayout>
            <Grid ColumnDefinitions="Auto,*">
                <ImageButton Grid.Column="0" WidthRequest="30" HeightRequest="30" Source="search.svg" Clicked="OnSearchClicked" />
            <local:LineEntry Grid.Column="1" x:Name="searchEntry" Style="{DynamicResource lineentry}"
                             Placeholder="Search" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
            </Grid>
        </HorizontalStackLayout>
        
    </Frame>
</ContentView>
