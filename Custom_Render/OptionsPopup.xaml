<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Fast_Cash.Custom_Render.OptionsPopup">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Button Text="Logout" Command="{Binding OnLogoutCommand}" />
        <Button Text="Delete Account" Command="{Binding OnDeleteAccountCommand}" />
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Button Text="X" WidthRequest="30" HeightRequest="30" Padding="0"
         BackgroundColor="{DynamicResource PrimaryBackgroundColor}" Command="{Binding ClosePopupCommand}" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" WidthRequest="20" HeightRequest="20"
                    IsVisible="{Binding IsBusy}" />
        </StackLayout> 
       
    </VerticalStackLayout>
</toolkit:Popup>
