<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cashnal.Custom_Render.FunctionsCard">
    <Frame HasShadow="True" BackgroundColor="{DynamicResource ProTextColor}" CornerRadius="10" Padding="5">
        <StackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
            <ImageButton HeightRequest="50" WidthRequest="50" Source="{Binding BackgroundImageSource}" Aspect="AspectFit"/>
            <Label HorizontalOptions="Center" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}" Text="{Binding HeadText}"/>
            <Label HorizontalOptions="Center" FontSize="14" TextColor="{DynamicResource PrimaryTextColor}" Text="{Binding SubText}"/>
        </StackLayout>
    </Frame>
</ContentView>
